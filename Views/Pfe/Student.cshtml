@{
    ViewData["Title"] = "Student Page";
    ViewData["Name"] = ViewBag.FirstName + " " + ViewBag.LastName;
    ViewData["Description"] = ViewBag.Description;
    ViewData["Email"] = ViewBag.Email;
}

<body>
    <main class="d-flex flex-nowrap" style=" min-height: 80vh">
        <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                <svg class="bi pe-none me-2" width="40" height="32"><use xlink:href="#RoleViews/Student"></use></svg>
                <span class="fs-4">Student</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a asp-controller="Pfe" asp-action="Student" class="nav-link active " aria-current="page">
                        <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#RoleViews/Student"></use></svg>
                        About Me
                    </a>
                </li>
                <li>
                    <a asp-controller="Pfe" asp-action="MyProject" class="nav-link link-dark">
                        <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
                        My Project
                    </a>
                </li>
                <li>
                    <a asp-controller="Pfe" asp-action="MyReportCard" class="nav-link link-dark">
                        <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#table"></use></svg>
                        Report Card
                    </a>
                </li>

            </ul>
            <hr>
            <div class="dropdown">
                <form id="logoutForm" class="form-inline" action="/Identity/Account/Logout?returnUrl=%2F" method="post">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">
                        <strong>Sign Out</strong>

@model ASP.NETCoreIdentityCustom.Models.Project
@{
    ViewData["Title"] = "Student Page";
}

<body>
    <main class="d-flex flex-nowrap" style=" min-height: 80vh">
        <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                <svg class="bi pe-none me-2" width="40" height="32"><use xlink:href="#RoleViews/Student"></use></svg>
                <span class="fs-4">Student</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a asp-controller="Pfe" asp-action="Student" class="nav-link link-dark" aria-current="page">
                        <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#RoleViews/Student"></use></svg>
                        About Me
                    </a>
                </li>
                <li>
                    <a asp-controller="Pfe" asp-action="MyProject" class="nav-link active ">
                        <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
                        My Project
                    </a>
                </li>
                <li>
                    <a asp-controller="Pfe" asp-action="MyReportCard" class="nav-link link-dark">
                        <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#table"></use></svg>
                        Report Card
                    </a>
                </li>

            </ul>
            <hr>
            <div class="dropdown">
                <form id="logoutForm" class="form-inline" action="/Identity/Account/Logout?returnUrl=%2F" method="post">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">
                        <strong>Sign Out</strong>
                    </button>
                    <input name="__RequestVerificationToken" type="hidden" value="CfDJ8Mp5Uk-tgNJOsihK5PBikfZ84w5IEaFOkLWFTtRrmZsGHy8g6qUf_OCy7pqJtX7KjGzjP1hGgoSuzm_x-c5v2K-kChv_id4cJi-odZ1i75Kn4KQKZsu0ulCeAs-1ipKFkddMdwk1_G9EmnyUUbXUfNeQTqg7iDXxA6bjh7aQyOrUprOKRuZXfBaJLCttRr8N3Q">
                </form>

            </div>

        </div>
        <div style="min-width: 80vh">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="EditProject">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ProjectId" />
                        <div class="form-group">
                            <label asp-for="Title" class="control-label">Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DescriptionProjet" class="control-label">Project Description</label>
                            <input asp-for="DescriptionProjet" class="form-control" />
                            <span asp-validation-for="DescriptionProjet" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DomaineId" class="control-label">Domaine</label>
                            <select asp-for="DomaineId" class="form-control" asp-items="ViewBag.DomaineId"></select>
                            <span asp-validation-for="DomaineId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</body>
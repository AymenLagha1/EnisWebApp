                </form>

            </div>

        </div>
        <div style="min-width: 80vh">
            <div>
                <div class="alert alert-primary" role="alert">
                    Student Full Name
                </div>
                <p>@ViewData["Name"]</p>
            </div>
            <div>
                <div class="alert alert-primary" role="alert">
                    Email
                </div>
                <p>@ViewData["Email"]</p>
            </div>
            <div>
                <div class="alert alert-primary" role="alert">
                    Description
                </div>
                <p>@ViewBag.ProjectDescription</p>
            </div>
            <div>
                <div class="alert alert-primary" role="alert">
                    Domaine
                </div>
                <p>@ViewBag.ProjectDomaine</p>
            </div>
            <div>
                <div class="alert alert-primary" role="alert">
                    supervisor
                </div>
                <p>@ViewBag.Supervisor</p>
            </div>
        </div>
    </main>
